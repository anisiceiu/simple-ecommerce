@model ProductCreateVM

@{
    ViewData["Title"] = "Add Product";
    Layout = "_LayoutAdmin";
}



<form asp-action="Create" method="post">
    <div class="row">

        <div class="col-md-6 mb-3">
            <label>Category</label>
            <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-control">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label>Name</label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <label>Description</label>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
        </div>

        <div class="col-md-4 mb-3">
            <label>Price</label>
            <input asp-for="Product.Price" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>Stock</label>
            <input asp-for="Product.Stock" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>Image URL</label>
            <input asp-for="Product.ImageUrl" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>
                <input asp-for="Product.IsActive" /> Active
            </label>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save Product</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>

    </div>
</form>

